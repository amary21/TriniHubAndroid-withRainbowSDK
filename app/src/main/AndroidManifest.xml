<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.amary21.trinihub">

    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".activity.meeting.ScaneMeetActivity"
            android:theme="@style/AppTheme.NoActionBar.Window"/>
        <activity
            android:name=".activity.meeting.guestlist.GuestlistMeetActivity"
            android:theme="@style/AppTheme.NoActionBar.Window" />
        <activity
            android:name=".activity.meeting.DetailMeetActivity"
            android:theme="@style/AppTheme.NoActionBar.Window" />
        <activity
            android:name=".activity.meeting.CreateMeetActivity"
            android:theme="@style/AppTheme.NoActionBar.Window" />
        <activity
            android:name=".activity.file_sharing.FileActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.channel.detail.DetailChannelActivity"
            android:theme="@style/AppTheme.NoActionBar.Window" />
        <activity
            android:name=".activity.channel.CreateChannelActivity"
            android:theme="@style/AppTheme.NoActionBar.Window" />
        <activity
            android:name=".activity.edit_profile.EditProfileActivity"
            android:theme="@style/AppTheme.NoActionBar.Window" />
        <activity
            android:name=".activity.contact.ContactActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.account_info.AccountClientActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.chat_room.ChatroomActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.chat_room.ChatroomActivity" />
        </activity>
        <activity
            android:name=".activity.splash.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.main.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->


            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>
    </application>

</manifest>